<plugin name='spring-security-radius' version='1.0.0' grailsVersion='1.3.7 &gt; *'>
  <author>Sami Mäkelä</author>
  <authorEmail>smakela@iki.fi</authorEmail>
  <title>Spring Security RADIUS Plugin</title>
  <description>RADIUS support for the Spring Security plugin.</description>
  <documentation>http://smakela.github.com/grails-spring-security-radius/</documentation>
  <type>SpringSecurityRadiusGrailsPlugin</type>
  <resources>
    <resource>DefaultRadiusSecurityConfig</resource>
    <resource>LoginController</resource>
    <resource>LogoutController</resource>
    <resource>radius.test.Role</resource>
    <resource>radius.test.User</resource>
    <resource>radius.test.UserRole</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='http://dev.coova.org/mvn/' url='http://dev.coova.org/mvn/' />
    <repository name='http://www.terracotta.org/download/reflector/releases' url='http://www.terracotta.org/download/reflector/releases/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='net.jradius' name='jradius-extended' version='1.1.4' />
      <dependency group='net.jradius' name='jradius-dictionary' version='1.1.4' />
      <dependency group='net.jradius' name='jradius-core' version='1.1.4' />
    </compile>
  </dependencies>
  <plugins />
  <runtimePluginRequirements>
    <plugin name='springSecurityCore' version='1.2.4 &gt; *' />
  </runtimePluginRequirements>
  <behavior />
</plugin>